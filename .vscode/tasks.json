{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "cbuild",
            "command": "cbuild",
            "isShellCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "ninja",
            "command": "ninja",
            "isShellCommand": true,
            "showOutput": "always",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+): (warning|error): (.*)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}